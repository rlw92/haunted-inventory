extends layout

block content
  h1 #{title}: #{type.name}


  if type_items.length

    p #[strong Delete the following items before attempting to delete this item type.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each book in type_items
        dt
          a(href=book.url) #{book.item_name}
        dd #{book.item_summary}

  else
    p Do you really want to delete this Item type?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=type._id )

      button.btn.btn-primary(type='submit') Delete
